{
  "name": "koa-server-boilerplate",
  "version": "0.0.1",
  "description": "A boilerplate for Koa Server with Typescript, Babel, and Rollup",
  "private": true,
  "license": "MIT",
  "author": "Wisdom <pdsu.wwz@foxmail.com>",
  "repository": {
    "type": "git",
    "url": "https://github.com/pdsuwwz/koa-server-boilerplate.git"
  },
  "engines": {
    "node": ">=10.18.1"
  },
  "scripts": {
    "dev": "nodemon",
    "watch": "babel-node src/main.ts --extensions \".ts\"",
    "clean:dist": "rm -rf ./dist",
    "build": "pnpm clean:dist && rollup --c --configPlugin @rollup/plugin-typescript --bundleConfigAsCjs",
    "tsbuild": "pnpm clean:dist && tsc && tsc-alias",
    "start": "pm2 start ecosystem.config.js --env production",
    "restart": "pm2 restart ecosystem.config.js --env production",
    "stop": "pm2 stop ecosystem.config.js",
    "delete": "pm2 delete ecosystem.config.js",
    "delete:all": "pm2 delete all",
    "wc": "pm2 list",
    "log": "pm2 log",
    "lint": "eslint . --ext .js,.ts",
    "lint:fix": "eslint . --ext .js,.ts --fix"
  },
  "keywords": [
    "babel",
    "koa2",
    "typescript",
    "boilerplate",
    "pm2",
    "nodemon",
    "eslint",
    "rollup"
  ],
  "dependencies": {
    "@koa/cors": "4.0.0",
    "dotenv": "^16.0.3",
    "koa": "^2.14.1",
    "koa-bodyparser": "4.4.1",
    "koa-router": "^12.0.0"
  },
  "devDependencies": {
    "@babel/core": "^7.20.7",
    "@babel/node": "^7.20.7",
    "@babel/preset-env": "^7.20.2",
    "@babel/preset-typescript": "^7.18.6",
    "@rollup/plugin-babel": "6.0.3",
    "@rollup/plugin-commonjs": "^24.0.0",
    "@rollup/plugin-json": "^6.0.0",
    "@rollup/plugin-node-resolve": "15.0.1",
    "@rollup/plugin-typescript": "^11.0.0",
    "@types/bluebird": "^3.5.38",
    "@types/koa": "^2.13.5",
    "@types/koa-bodyparser": "4.3.12",
    "@types/koa-router": "^7.4.4",
    "@types/koa__cors": "^3.3.0",
    "@types/node": "^18.11.18",
    "@typescript-eslint/eslint-plugin": "^5.47.1",
    "@typescript-eslint/parser": "^5.47.1",
    "axios": "1.3.4",
    "babel-plugin-module-resolver": "^5.0.0",
    "eslint": "^8.30.0",
    "nodemon": "^2.0.20",
    "pm2": "^5.2.2",
    "rollup": "^3.8.1",
    "rollup-plugin-typescript2": "0.34.1",
    "ts-node": "^10.9.1",
    "ts-toolbelt": "^9.6.0",
    "tsc-alias": "^1.8.2",
    "tsconfig-paths": "^4.1.1",
    "tslib": "^2.4.1",
    "typescript": "^4.9.4"
  }
}
